{ 
	email {$EMAIL}
}

(untrusted_ips) {
	@untrusted_ips {
		not remote_ip {$HOME_IP}
	}
}

(security) {
    header {
        Strict-Transport-Security "max-age=31536000;"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-Robots-Tag "none"
        X-Permitted-Cross-Domain-Policies "none"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "no-referrer-when-downgrade"
    }   
}

collabora.{$DOMAIN} {
	import security
	reverse_proxy collabora:9980
}

libreddit.{$DOMAIN} {
	reverse_proxy libreddit:8080
	import security
	import untrusted_ips
	basicauth @untrusted_ips {
		{$LIBREDDIT_USER} {$LIBREDDIT_PASSWORD}
	}
}

nextcloud.{$DOMAIN} {
	reverse_proxy nextcloud-app:80
	# reverse_proxy {$IP}:4444
	header Strict-Transport-Security max-age=31536000; # Nextcloud does not need the entire security block	
	redir /.well-known/carddav /remote.php/carddav 301
	redir /.well-known/caldav /remote.php/caldav 301
}

nitter.{$DOMAIN} {
	reverse_proxy nitter:8080
	import security
	import untrusted_ips
	basicauth @untrusted_ips {
		{$NITTER_USER} {$NITTER_PASSWORD}
	}
}

photos.{$DOMAIN} {
	reverse_proxy photoprism-app:2342
	import security
}

yt.{$DOMAIN} {
	reverse_proxy invidious-app:3000
	import untrusted_ips
	basicauth @untrusted_ips {
		{$INVIDIOUS_USER} {$INVIDIOUS_PASSWORD}
	}
}

whoogle.{$DOMAIN} {
	reverse_proxy whoogle:5000
	import security
	import untrusted_ips
	basicauth @untrusted_ips {
		{$WHOOGLE_USER} {$WHOOGLE_PASSWORD}
	}
}
